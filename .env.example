# 환경 설정
SPRING_PROFILES_ACTIVE=production
DEPLOYMENT_ENV=production

# 데이터베이스 설정
DB_URL=jdbc:mysql://mysql:3306/fraud_detection?useSSL=false&serverTimezone=Asia/Seoul&allowPublicKeyRetrieval=true&autoReconnect=true
DB_USERNAME=fraud_user
DB_PASSWORD=rootpassword123

# JPA 설정
DDL_AUTO=update
JPA_SHOW_SQL=false

# 로깅 설정
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
MAIL_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
SQL_BIND_LOG_LEVEL=WARN
ROOT_LOG_LEVEL=WARN

# Actuator 설정
ACTUATOR_HEALTH_DETAILS=when-authorized

# MySQL 설정
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=fraud_detection
MYSQL_USER=fraud_user
MYSQL_PASSWORD=rootpassword123

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379

# JWT 설정 (실제 값으로 변경 필요)
JWT_SECRET_KEY=secret-key

# 이메일 설정 (실제 값으로 변경 필요)
MAIL_USERNAME=example@gmail.com
MAIL_PASSWORD=mail-password

MODEL_IMAGE=your-dockerhub-user/fraud-model:latest
MODEL_VERSION=v1